<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="utilities.css">
    <link rel="stylesheet" href="style.css">
    <title>Document</title>
</head>
<body>

<h1> this is the daily page</h1>

<a class="button-format" href="/logout">Logout</a>
<div class="grid-list1">
    <h2><%= user.userName %>, you have  item(s) remaining on your list:</h2>
    </div>

<section>
    <ul>
        <% for (let i=0; i<weightData.length; i++){%>
            <li>
                <span><%=weightData[i].dbtodaysdaynumber %></span>
                <span><%=weightData[i].dbdailygoalweight.toFixed(1) %></span>
            </li>
       <% }  %>
    </ul>
</section> 

<div>
<form  action="/daily/dailyentry/<%= user.id %>?_method=PUT"   method="POST" > 
    <input type="text" class="form-control" id="day" name="day" placeholder="Today's Day Number">
    <input type="text" class="form-control" id="weight" name="weight" placeholder="Weight This Morning">
    <input type="text" class="form-control" id="calin" name="calin" placeholder="Calories In (Yesterday)">
    <input type="text" class="form-control" id="calout" name="calout" placeholder="Calories Out (Yesterday)" >
    <button class="btn btn-primary fa fa-heart" type="submit">Submit</button>
   </form>

</div>





<section>
    <table class="table">
        <caption>Days</caption>
        <thead>
        <tr>
            <th>Day #</th>
            <th>Yesterday's Calories In</th>
            <th>Yesterday's Calories Out</th>
            <th>This Morning's Weight (lbs)</th>
            <th>Goal Weight (lbs)</th>
        </tr>
        </thead>
        <tbody>
            <%for (let i=0; i<weightData.length; i++){%>
                <tr>
                    <td><%=weightData[i].dbtodaysdaynumber%></td>
                    <td><%=weightData[i].dbdailygoalweight.toFixed(1)%></td>
                    <td>100</td>
                    <td>200</td>
                    <td>300</td>
                </tr>
            <%}%>
        </tbody>
    </table>
</section>


<section class="chart">
    <div class="chart-container" style="position: relative">
        <canvas id="dailyChart" width="400" height="400"></canvas>
    </div>

    <script>
        const labelArray=[]
        for (i=0; i<=35; i++){
        labelArray[i]=i
        }

        let datapoint=[]
        for (let i=0; i<3; i++){
         datapoint[i]=  `<%=weightData[2].dbdailygoalweight%>`;}

var goalweightdata= JSON.parse(`<%- JSON.stringify(weightData) %>`);
var labelsgoalweight = [];
for(var i = 0; i < goalweightdata.length; i++){
   labelsgoalweight.push(goalweightdata[i].dbdailygoalweight);
}





        const data = {
              labels: labelArray,
              datasets: [
                {
                type:'line',
                label: 'Weight Over Time',
                backgroundColor: 'rgb(255, 99, 132)',
                borderColor: 'rgb(255, 99, 132)',
                data:labelsgoalweight,
                 },
                {
                type: 'line',
                label:'current weight',
                borderColor:"rgba(0,0,0,0)",
                data: [ `<%= weightData[0].dbdailygoalweight%>`, `<%= weightData[1].dbdailygoalweight%>`, `<%= weightData[2].dbdailygoalweight%>`],
                pointRadius: 10,
                }]
            };
        const config = {
              type: 'line',
              data: data,
              options: {  plugins:{legend:{ display: false,
                    labels: { color: 'rgb(255, 99, 132)' }
                  } }  }
              };
         </script>

        <script>
            const dailyChart = new Chart(
              document.getElementById('dailyChart'),
              config
            );
        </script>

    </section>



</body>

</html>
