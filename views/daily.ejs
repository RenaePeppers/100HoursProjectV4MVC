<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Document</title>
</head>
<body>

<h1> this is the daily page</h1>

<a class="button-format" href="/logout">Logout</a>
<div class="grid-list1">
    <h2><%= user.userName %>, Your goal for daily calorie deficit is:  <span><%=weightData[0].dbgoaldeficit %></span></h2>
    </div>

<section>
    <ul>
        <% for (let i=0; i<weightData.length; i++){%>
            <li>
                <span><%=weightData[i].dbtodaysdaynumber %></span>
                <span><%=weightData[i].dbdailygoalweight.toFixed(1) %></span>
            </li>
       <% }  %>
    </ul>
</section> 

<section>
    <table class="table">
        <caption>Days</caption>
        <thead>
        <tr>
            <th>Day #</th>
            <th>Calories In</th>
            <th>Calories Out</th>
            <th>Weight</th>
            <th>Goal Weight</th>
            <th>Predicted Weight</th>
            <th>Daily Calorie Deficit</th>
            <th>Average Calorie Deficit</th>
        </tr>
        </thead>
        <tbody>
            <%for (let i=0; i<weightData.length; i++){%>
                <% if(i<weightData.length-1){j=i+1} %>
                <tr>
                    <td><a href="/entry/<%= weightData[i]._id %>"></a><%=weightData[i].dbtodaysdaynumber%></td>
                    <td><%=weightData[j].dbyesterdaycalin%></td>
                    <td><%=weightData[j].dbyesterdaycalout%></td>
                    <td><%=weightData[i].dbtodaysweight%></td>
                    <td><%=weightData[i].dbdailygoalweight.toFixed(1)%></td>
                    <td><%=weightData[i].dbrunningpredictedweight%></td>
                    <td><%=weightData[j].dbyesterdaydeficit%></td>
                    <td><%=weightData[i].dbrunningavgdeficit%></td>
                </tr>
               
            <%}%>
        </tbody>
    </table>
</section>


<section class="chart">
    <div class="chart-container" style="position: relative">
        <canvas id="dailyChart" width="400" height="400"></canvas>
    </div>

    <script>
        const labelArray=[]
        for (i=0; i<=35; i++){
        labelArray[i]=i
        }

        let datapoint=[]
        for (let i=0; i<35; i++){
         datapoint[i]=  `<%=weightData[2].dbdailygoalweight%>`;}

var goalweightdata= JSON.parse(`<%- JSON.stringify(weightData) %>`);

var labelsgoalweight = [];
for(var i = 0; i < goalweightdata.length; i++){
   labelsgoalweight.push(goalweightdata[i].dbdailygoalweight);
}
var labelscurrentweight = [];
for(var i = 0; i < goalweightdata.length; i++){
   labelscurrentweight.push(goalweightdata[i].dbtodaysweight);
}
        const data = {
              labels: labelArray,
              datasets: [
                {
                type:'line',
                label: 'Weight Over Time',
                backgroundColor: 'rgb(255, 99, 132)',
                borderColor: 'rgb(255, 99, 132)',
                data:labelsgoalweight,
                 },
                {
                type: 'line',
                label:'current weight',
                borderColor:"rgba(0,0,0,0)",
                data: labelscurrentweight,
                pointRadius: 10,
                }]
            };
        const config = {
              type: 'line',
              data: data,
              options: {  plugins:{legend:{ display: false,
                    labels: { color: 'rgb(255, 99, 132)' }
                  } }  }
              };
         </script>

        <script>
            const dailyChart = new Chart(
              document.getElementById('dailyChart'),
              config
            );
        </script>

    </section>


</body>
</html>
