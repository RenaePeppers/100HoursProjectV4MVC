        <script>
            const labelArray=[]
            for (i=0; i<=35; i++){
            labelArray[i]=i
            }
            const labels = labelArray;
            const data = {
                  labels: labels,
                  datasets: [{
                    label: 'Goal Line:  Weight Over Time',
